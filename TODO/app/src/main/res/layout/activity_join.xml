<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="278dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="ToDo App 회원가입"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtJoinId"
        android:layout_width="267dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="아이디를 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/txtJoinPwd"
        android:layout_width="268dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJoinId" />

    <EditText
        android:id="@+id/txtJoinLastName"
        android:layout_width="267dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="성씨(lastName)을 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJoinFirstName" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="210dp"
        android:layout_height="67dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="76dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJoinLastName">

        <RadioButton
            android:id="@+id/rdoMale"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="남성"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="474dp" />

        <RadioButton
            android:id="@+id/rdoFemale"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="여성"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="474dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="66dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:gravity="right|center_vertical"
        android:text="성별 :"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup"
        app:layout_constraintHorizontal_bias="0.677"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJoinLastName" />

    <EditText
        android:id="@+id/txtJoinFirstName"
        android:layout_width="267dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="이름(firstName)을 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJoinPwd" />

    <Button
        android:id="@+id/btnJoinComplete"
        android:layout_width="129dp"
        android:layout_height="63dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="108dp"
        android:text="가입완료"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnJoinCancel"
        android:layout_width="129dp"
        android:layout_height="63dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="108dp"
        android:text="취소"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvJoinId"
        android:layout_width="268dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJoinId" />

</androidx.constraintlayout.widget.ConstraintLayout>